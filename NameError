def calculate_area(radius):
    # The formula to calculate the area of a circle is A = Ï€ * r^2
    pi = 3.14
    area = pi * r^2
    return area

def main():
    radius = input("Enter radius of circle: ")
    radius = float(radius)
    area = calculate_area(radius)
    print("The area of the circle is:", area)

if __name__ == "__main__":
    main()
